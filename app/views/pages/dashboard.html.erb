<style>
  .card {
    background-color: #FFBD59;
    border-color: #FFBD59;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    border-radius: 10px;
  }

  .card h5 {
    color: #FFFFFF;
    font-weight: bold;
  }

  .rounded-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden;
  }

  .rounded-image img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .square-box {
    height: 120px;
    width: 120px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    border-radius: 10px;
  }

  .square-box i {
    font-size: 2.5rem;
  }

  @media only screen and (min-device-width: 375px) and (max-device-width: 812px) and (-webkit-device-pixel-ratio: 3) {
    .col-md-6 {
      width: 50%;
    }
  }
</style>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center">
      <div class="rounded-image mx-auto d-block">
        <%= image_tag 'dog.jpg', class: 'img-fluid', alt: 'Profile Image' %>
      </div>
      <h4 class="mt-3 name"><strong>JC Lambert</strong></h4>
    </div>
  </div>

  <div class="row mt-5 justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body square-box">
              <i class="fas fa-envelope fa-lg mb-3 text-white"></i>
              <h5>Messages</h5>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body square-box">
              <i class="fas fa-home fa-lg mb-3 text-white"></i>
              <h5>Visits</h5>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body square-box">
              <i class="fas fa-user fa-lg mb-3 text-white"></i>
              <h5>My Profile</h5>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body square-box">
              <i class="fas fa-pencil-alt fa-lg mb-3 text-white"></i>
              <h5>My Offers</h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
