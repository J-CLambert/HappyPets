<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center">
      <div class="rounded-image mx-auto d-block">
        <div style="border-radius: 50%; overflow: hidden; width: 150px; height: 150px; margin: 0 auto;">
<% case current_user.name
when 'Ciwan' %>
  <%= image_tag("Ciwan.png", class: "img-fluid", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" }) %>
<% when 'Terri' %>
  <%= image_tag("tierri.jpg", class: "img-fluid", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" }) %>
<% when 'J-C' %>
  <%= image_tag("JC.jpg", class: "img-fluid", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" }) %>
<% else %>
  <%= image_tag("JC.jpg", class: "img-fluid", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" }) %>
<% end %>
        </div>
      </div>
    <h3 class="name"><%= current_user.name%></h3>
    </div>
  </div>

  <div class="row mt-5 justify-content-center">
    <div class="col-6 col-sm-6 col-md-3 mb-3">
      <div class="card" style="background-color: #FFBD59; border-color: #FFBD59; border-radius: 10px;">
        <div class="card-body d-flex flex-column justify-content-center align-items-center text-center" style="height: 120px;">
          <i class="fas fa-envelope fa-lg mb-3 text-white" style="font-size: 2.5rem;"></i>
          <h5 style="color: #FFFFFF; font-weight: bold;">Messages</h5>
        </div>
      </div>
    </div>
    <div class="col-6 col-sm-6 col-md-3 mb-3">
      <%= link_to requests_requested_path do%>
      <div class="card" style="background-color: #FFBD59; border-color: #FFBD59; border-radius: 10px;">
        <div class="card-body d-flex flex-column justify-content-center align-items-center text-center" style="height: 120px;">
          <i class="text-decoration-underline fas fa-home fa-lg mb-3 text-white" style="font-size: 2.5rem;"></i>
          <h5 class="text-decoration-underline" style="color: #FFFFFF; font-weight: bold;">Visits</h5>
        </div>
      </div>
      <%end%>
    </div>
    <div class="col-6 col-sm-6 col-md-3 mb-3">
      <div class="card" style="background-color: #FFBD59; border-color: #FFBD59; border-radius: 10px;">
        <div class="card-body d-flex flex-column justify-content-center align-items-center text-center" style="height: 120px;">
          <i class="fas fa-user fa-lg mb-3 text-white" style="font-size: 2.5rem;"></i>
          <h5 style="color: #FFFFFF; font-weight: bold;">My Profile</h5>
        </div>
      </div>
    </div>
    <div class="col-6 col-sm-6 col-md-3 mb-3">
      <%= link_to index_breeder_pets_path do%>
        <div class="card" style="background-color: #FFBD59; border-color: #FFBD59; border-radius: 10px;">
          <div class="card-body d-flex flex-column justify-content-center align-items-center text-center" style="height: 120px;">
            <i class="fas fa-pencil-alt fa-lg mb-3 text-white" style="font-size: 2.5rem;"></i>
            <h5 style="color: #FFFFFF; font-weight: bold;">My Offers</h5>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
