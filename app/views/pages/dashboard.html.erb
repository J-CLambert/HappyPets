<style>
  .card {
    background-color: #FFA500;
    border-color: #FFA500;
  }

  .card h5 {
    color: #FFFFFF;
  }

  .rounded-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden;
  }

  .rounded-image img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
</style>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center">
      <div class="rounded-image mx-auto d-block">
        <%= image_tag 'dog.jpg', class: 'img-fluid', alt: 'Profile Image' %>
      </div>
      <h4 class="mt-3">JC Lambert</h4>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="fas fa-envelope fa-3x mb-3 text-white"></i>
          <h5>Messages</h5>
          <textarea class="form-control" rows="5" placeholder="Enter text here"></textarea>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="fas fa-home fa-3x mb-3 text-white"></i>
          <h5>Visits</h5>
          <textarea class="form-control" rows="5" placeholder="Enter text here"></textarea>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="fas fa-user fa-3x mb-3 text-white"></i>
          <h5>My Profile</h5>
          <textarea class="form-control" rows="5" placeholder="Enter text here"></textarea>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="fas fa-pencil-alt fa-3x mb-3 text-white"></i>
          <h5>My Offers</h5>
          <textarea class="form-control" rows="5" placeholder="Enter text here"></textarea>
        </div>
      </div>
    </div>
  </div>
</div>
