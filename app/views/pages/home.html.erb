<div class="container search-gird pt-4 pb-4 banner-radius">
  <h1>A safe start to a lifelong friendship</h1>
  <p>Connect with trusted breeders and rescues</p>

  <div class="input-color p-4 rounded-5">
    <%# <div class="input-group flex-nowrap"> %>
      <%# <span class="input-group-text" id="addon-wrapping"><i class="fa-solid fa-magnifying-glass" style="color: #ffbd59;"></i></span> %>
          <% if user_signed_in? == false || (user_signed_in? && !current_user.breeder)%>
            <%= simple_form_for :search, url: pets_path, method: :get do |f| %>
              <%= f.input :pet, label: 'Pet', placeholder: "Find your perfect companion" %>
              <%= f.input :address, label: 'Address', placeholder: "Location"%>
              <div class="btn btn-search rounded-5">
              <%= f.button :submit, "Search"%>
              </div>
            <% end %>
          <%elsif user_signed_in? && current_user.breeder%>
            <p class="text-center">Give your animals a forever home!</p>
          <div class="home_button_container">
            <%= link_to "click here!", new_pet_path, class: "home_button text-center", style: "text-decoration: none;" %>
          </div>

          <% end %>
    </div>
  </div>
</div>
<div class="d-flex justify-content-between pet-filters mx-3">
  <%= link_to pets_path(species: "cat") do %>
    <div class="d-flex flex-column justify-content-center">
      <i class="fa-solid fa-cat" style="color: #ffbd59;"></i>
      <span class="text-center">Cats</span>
    </div>
  <% end %>
  <%= link_to pets_path(species: "dog") do %>
    <div class="d-flex flex-column justify-content-center">
      <i class="fa-solid fa-dog" style="color: #ffbd59;"></i>
      <span class="text-center">Dogs</span>
    </div>
  <% end %>
  <%= link_to pets_path(species: "bird") do %>
    <div class="d-flex flex-column justify-content-center">
      <i class="fa-solid fa-dove" style="color: #ffbd59;"></i>
      <span class="text-center">Birds</span>
    </div>
  <% end %>
  <%= link_to pets_path(species: "snake") do %>
    <div class="d-flex flex-column justify-content-center">
      <i class="fa-solid fa-staff-snake" style="color: #ffbd59;"></i>
      <span class="text-center">Snake</span>
    </div>
  <% end %>
</div>

