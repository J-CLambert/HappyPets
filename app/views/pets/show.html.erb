    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>Title</p>
    </div>
    <div class="col text-end">
      <p><%= @pet.title %></p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>Birthday</p>
    </div>
    <div class="col text-end">
      <p><%= @pet.birthday %></p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>Vaccinated Agains</p>
    </div>
    <div class="col text-end">
      <p><%= @pet.vaccinated_against %></p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>Species</p>
    </div>
    <div class="col text-end">
      <p><%= @pet.species %></p>
    </div>
  </div>

  <p class="text-end pt-3">Price: <%= @pet.price %></p>
  <% if current_user && current_user == @pet.user %>
  <p>
    <%= link_to 'Edit', edit_pet_path(@pet) %> |
    <%= link_to 'Delete', pet_path(@pet), method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>



<div class="container bg-white">
  <h2 class="text-center">Visit Requests</h2>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= simple_form_for [@pet, @request] do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-group">
      <%= f.input :message %>
    </div>
    <div class="form-group">
      <%= f.datetime_select :visit_date, minute_step: 30, discard_seconds: true %>
  </div>
<% if current_user && current_user != @pet.user %>
  <p>
    <%= link_to 'Send Visit Request', new_pet_request_path(pet_id: @pet.id) %>
  </p>
<% end %>
      <% end %>
    </div>
  </div>
