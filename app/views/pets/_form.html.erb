<div class="row justify-content-center">
    <div class="col-md-8">
        <!-- Card avec ombre -->
        <div class="card shadow">
            <!-- Image de chien ici -->
            <img src="chemin_vers_image_de_chien" alt="Image de Chien" class="card-img-top">
            <div class="card-body">
                <%= form_with model: pet, html: {class: 'form-horizontal'} do |f| %>
                    <div class="form-group">
                        <%= f.label :name, class: 'control-label' %>
                        <%= f.text_field :name, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :price, class: 'control-label' %>
                        <%= f.number_field :price, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :species, class: 'control-label' %>
                        <%= f.text_field :species, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :breed, class: 'control-label' %>
                        <%= f.text_field :breed, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :description, class: 'control-label' %>
                        <%= f.text_area :description, size: "70x5", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :title, class: 'control-label' %>
                        <%= f.text_field :title, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :birthday, class: 'control-label' %>
                        <%= f.date_field  :birthday, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :vaccinated_against, class: 'control-label' %>
                        <%= f.text_field :vaccinated_against, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.submit "Submit", class: 'btn btn-primary' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
