<div class=" container row justify-content-center m-5">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="col-md-6">
        <div class="card-body">
          <%= simple_form_for @pet, html: { class: 'form-horizontal' } do |f| %>
            <%= f.input :name %>
            <%= f.input :price %>
            <%= f.input :species %>
            <%= f.input :breed %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :title %>
            <%= f.label :birthday, class: 'control-label' %>
            <%= f.date_field  :birthday, class: 'form-control' %>
            <%= f.input :photos, as: :file, input_html: { multiple: true }, class: 'form-control' %>
            <%= f.input :vaccinated_against %>
            <%= f.submit "Submit" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
